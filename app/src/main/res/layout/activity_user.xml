<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.organizer.OrganizerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutUser"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#4DEBF2FD"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentInsetStart="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/btnBackUser"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/shape_btn_back_event"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_back"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/spectral_sc_regular"
                    android:text="Профиль"
                    android:textColor="#001E4A"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/btnBackUser"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollViewOrganizer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="26dp"
            android:paddingBottom="26dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutInfoOrganizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatarOrganizer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/usernameOrganizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sora_medium"
                        android:hint="Имя аккаунта"
                        android:lines="1"
                        android:maxEms="10"
                        android:textColor="#001E4A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lastNameOrganizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sora_regular"
                        android:hint="Указать имя и фамилия"
                        android:lines="1"
                        android:maxEms="16"
                        android:textColor="#001E4A"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/titleAboutOrganizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sora_regular"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="О себе:"
                android:textColor="#51001E4A"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutInfoOrganizer" />

            <TextView
                android:id="@+id/aboutOrganizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_regular"
                android:hint="Отсутствует"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#001E4A"
                android:textColorHint="#51001E4A"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleAboutOrganizer" />

            <View
                android:id="@+id/viewLineOrganizer"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="26dp"
                android:background="#EAEAEA"
                app:layout_constraintTop_toBottomOf="@+id/aboutOrganizer" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewLineOrganizer">

                <TextView
                    android:id="@+id/titleEventsOrganizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sora_regular"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Мероприятия 0"
                    android:textColor="#80001E4A"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewEventsOrganizer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/titleEventsOrganizer" />

                <ProgressBar
                    android:id="@+id/progressBarEventOrganizer"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="26dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleEventsOrganizer" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_not_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/viewLineOrganizer">

                <ImageView
                    android:id="@+id/icon_now_event_User"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/notEventOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/spectral_sc_medium"
                    android:gravity="center"
                    android:text="Здесь будут отображаться\nваши события"
                    android:textColor="#5A5A5A"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon_now_event_User" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/progressBarUser"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noConnectionViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/sora_regular"
        android:text="Нет подключение интеренета."
        android:textColor="#C6001E4A"
        android:visibility="gone" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>