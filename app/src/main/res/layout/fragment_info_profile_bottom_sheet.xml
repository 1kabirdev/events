<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewLineTop"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_sheet_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:padding="26dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/editProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Редактировать профиль"
                android:textColor="#001E4A"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#EAEAEA"
                app:layout_constraintTop_toBottomOf="@+id/editProfile" />

            <TextView
                android:id="@+id/savedEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Настройки пароля"
                android:textColor="#001E4A"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/viewLine"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewBottom" />

            <TextView
                android:id="@+id/countSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_btn_event_del"
                android:fontFamily="@font/sora_medium"
                android:gravity="center"
                android:paddingStart="13dp"
                android:paddingTop="4dp"
                android:paddingEnd="13dp"
                android:paddingBottom="4dp"
                android:text="0"
                android:textColor="#001E4A"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/viewBottom"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewLine" />

            <View
                android:id="@+id/viewBottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#EAEAEA"
                app:layout_constraintTop_toBottomOf="@+id/savedEvents" />

            <TextView
                android:id="@+id/archiveEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/manrope_medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Архив событий"
                android:textColor="#001E4A"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewBottom" />


            <TextView
                android:id="@+id/logautAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@drawable/shape_btn_discuss"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center"
                android:padding="12dp"
                android:text="Выйти из аккаунта"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/archiveEvents" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>